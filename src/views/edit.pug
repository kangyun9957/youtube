extend base

block content
    h4 Change title of video
    form(method="POST")
        input(placeholder="Title",required,type="text",name="title",maxlength=80,value=videos.title)
        input(placeholder="Description",required,type="text",name="description",minlength=20,value=videos.description)
        input(placeholder="Hashtags",required,type="text",name="hashtags",value=videos.hashtags.join())
        input(type="Submit",value="Save")